# File name: calc_kivy.py
#:kivy 1.10.1
<Button>:
    font_size: 20

<CalcWindow>:
    orientation: 'vertical'

    GridLayout:
        cols:1
        TextInput:
            id:textbox
            text: app.the_text
            multiline: False
            readonly: True
            font_size: 20

    GridLayout:
        cols: 4
        Button:
            id: btn1
            text: '1'
            on_press: app.the_text += self.text
        Button:
            id: btn2
            text: '2'
            on_press: app.the_text += self.text
        Button:
            id: btn3
            text: '3'
            on_press: app.the_text += self.text
        GridLayout:
            cols: 2
            Button:
                id: btnPlus
                text: '+'
                on_press: app.the_text += self.text
            Button:
                id: btnMinus
                text: '-'
                on_press: app.the_text += self.text


        Button:
            id: btn4
            text: '4'
            on_press: app.the_text += self.text
        Button:
            id: btn5
            text: '5'
            on_press: app.the_text += self.text
        Button:
            id: btn6
            text: '6'
            on_press: app.the_text += self.text
        GridLayout:
            cols: 2
            Button:
                id: btnRazy
                text: '*'
                on_press: app.the_text += self.text
            Button:
                id: btnPrzez
                text: '/'
                on_press: app.the_text += self.text


        Button:
            id: btn7
            text: '7'
            on_press: app.the_text += self.text
        Button:
            id: btn8
            text: '8'
            on_press: app.the_text += self.text
        Button:
            id: btn9
            text: '9'
            on_press: app.the_text += self.text
        Button:
            id: btn0
            text: '0'
            on_press: app.the_text += self.text

        Button:
            id: btnOtworz
            text: '('
            on_press: app.the_text += app.lewyNawias(app.the_text)
        Button:
            id: btnKropka
            text: '.'
            on_press: app.the_text += self.text
        Button:
            id: btnZamknij
            text: ')'
            on_press: app.the_text += app.prawyNawias(app.the_text)
        Button:
            id: btnClr
            text: 'CLEAR'
            on_press: app.the_text = ""

    GridLayout:
        cols: 1
        Button:
            id: btnWynik
            text: '='
            on_press: app.the_text = app.wynik(app.the_text)
            background_color: 0,1,0,1